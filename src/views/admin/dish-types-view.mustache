{{#data.redir_admin_link}}
{{> partials/add-dish-type-form-view.partial}}
{{/data.redir_admin_link}}
<h2 class="text-secondary fw-normal mb-3">Domyślne typy potraw w systemie</h2>
<nav class="mb-4" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{base_dir}}admin/dashboard">Panel główny</a></li>
        <li class="breadcrumb-item active" aria-current="page">Domyślne typy potraw w systemie</li>
    </ol>
</nav>
<hr/>
{{> partials/dynamic-banner-view.partial}}
<div class="row justify-content-between align-items-center">
    <form class="col-lg-4 mb-3 d-flex justify-content-end" action="" method="post">
        <input type="search" name="search-dish-type-name" placeholder="Szukaj po nazwie" class="form-control" value="{{data.search_text}}">
        <button type="submit" class="btn btn-primary btn-md ms-2 py-2">
            <i class="bi bi-search"></i>
        </button>
    </form>
    <div class="col-lg-3 mb-3 d-flex justify-content-end">
        <button class="btn btn-primary add-content-button d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#add-dish-type">
            <span class="material-symbols-outlined me-2 fs-5">add</span>
            Dodaj typ potrawy
        </button>
    </div>
</div>
{{#data.not_empty}}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col-table-small">Lp</th>
                <th>Nazwa typu</th>
                <th class="fit">Akcja</th>
            </tr>
        </thead>
        <tbody>
            {{#data.dish_types}}
            <tr>
                <td class="align-middle">{{it}}</td>
                <td class="align-middle">{{name}}</td>
                <td class="align-middle fit flex-nowrap">
                    <button class="btn btn-primary ms-2 btn-sm" data-bs-toggle="modal" data-bs-target="#edit-dish-type-{{id}}">
                        Edytuj
                    </button>
                    <button class="btn btn-danger ms-2 btn-sm" data-bs-toggle="modal" data-bs-target="#delete-dish-type-{{id}}">
                        <span data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Usuń typ potrawy" type="button">
                            <i class="bi bi-x-lg"></i>
                        </span>
                    </button>
                </td>
            </tr>
            {{#data.redir_admin_link}}
            {{> partials/edit-delete-dish-type-form-view.partial}}
            {{/data.redir_admin_link}}
            {{/data.dish_types}}
        </tbody>
    </table>
</div>
{{> partials/pagination-view.partial}}
{{/data.not_empty}}
{{^data.not_empty}}
<div class="alert alert-warning mb-3" role="alert">
    Nie znaleziono żadnych typów potraw.
</div>
{{/data.not_empty}}
